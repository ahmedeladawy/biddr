<div class="container">
  <div class="row">
    <% if @auction.errors.any? %>
    <ul>
      <% @auction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

    <div class="col-md-4 col-md-offset-(-8)">
      <%= form_for @auction do |f| %>

        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Details %>
          <%= f.text_area :details, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :Ends_on %>
          <%= f.text_field :ends_on, class: 'datepicker' %>
           <!-- <%= f.text_field :ends_on, as: :string, input_html: { class: "datepicker" } %> -->
        </div>

        <div class="form-group">
          <%= f.label :Reserve_Price %>
          <%= f.text_field :reserve_price, class: 'form-control' %>
        </div>
        <%= f.submit 'Save', class:'btn btn-primary'%>

      <% end %>

    </div>

  </div>
</div>

